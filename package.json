{
  "name": "telegram-task-manager",
  "version": "1.0.0",
  "description": "A beautiful Telegram mini app for team task management with native push notifications",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:static": "npx http-server . -p 8080 -c-1 -o",
  "test": "jest --passWithNoTests",
  "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint .",
    "docker:build": "docker build -t telegram-task-manager .",
    "docker:run": "docker run -p 3000:3000 --env-file .env telegram-task-manager",
    "docker:compose": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "telegram",
    "mini-app",
    "task-management",
    "team",
    "push-notifications",
    "real-time",
    "collaboration",
    "webhook",
    "bot"
  ],
  "author": "Task Management Bot",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "http-server": "^14.1.1",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/telegram-task-manager.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/telegram-task-manager/issues"
  },
  "homepage": "https://github.com/yourusername/telegram-task-manager#readme"
}
